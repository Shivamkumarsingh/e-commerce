<h1>Shop</h1>
<table>
<thead>
<tr>
<th>Image</th>
<th>Name</th>
<th>Brand</th>
<th>Price</th>

<th>Category</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
	<% @products.each do |p| %>
	<tr>
	<td><%=link_to(image_tag(p.image.url, :style => "height:100px;width:100px;" ),   :class => "img-responsive") %></td> 
	<td><%=p.name%></td>
	<td><%=p.brand.name%></td>

	<td><%=p.sale_price%></td>
	
	<td><%=p.category.name%></td>
	<td><%=link_to 'show','%></td>
    <td><a href="/add_to_cart/<%=p.id%>">Add To Cart</a></td>
	</tr>
	<%end %>
</tbody>
</table>

