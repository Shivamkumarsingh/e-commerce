<!DOCTYPE html>
<html>
<head>

  <title>e-Commerce</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">

      <%= link_to 'Fasion Bazaar', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', root_path %></li>
        
        

      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              
            <%= gravatar_tag current_user.email, :size => 20 %>

              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Profile', edit_user_registration_path %></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>

            </ul>
          </li>
        <% else %>
         
<li><%= link_to "Log In", new_user_session_path %></li>

          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
         
        <li>
  <%= link_to cart_path do %>
    <span class="glyphicon glyphicon-shopping-cart"></span>
    My Cart
    </li>
         <%end%>

      </ul>
      
    </div>

    
  </div>
</nav>
<div class="container-fluid">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
  <form>
          <div class="form-group">
            <div class="input-group">
            <span class="input-group-addon">
            <%= search_field(:product, :product_name , :style => "width:500px;margin-left:300px;", :class => "form-control", :placeholder => "So, What are you wishing for today?") %>
            
                <%= submit_tag("Search", :class => "btn btn-warning", :style => "float:left;") %>
            </div>
          </div>
        </form>
        <br/>
    <div class="row">
      <div class="col-sm-1 col-sm-offset-2"><span><%= link_to'Men', shop_men_path %></div>
      <div class="col-sm-1"><%= link_to'Women',shop_women_path %></div>
      <div class="col-sm-1"><%= link_to'Kids',shop_kids_path %></div>
      <div class="col-sm-1"><%= link_to'Book',shop_books_path %></div>
      <div class="col-sm-1"><%= link_to'Electronic',shop_electronics_path %></div>
      <div class="col-sm-1"><%= link_to'Sports',shop_sports_path%></div>
      
      
      
    </div>
</div>

<br><br>
<%= yield :top_content %>

<div class="container">
  <h1><%= yield :header %></h1>

  <%= yield %>
</div>

<div id="footer">
  <div class="container">
    
  </div>
</div>


</body>
</html>
