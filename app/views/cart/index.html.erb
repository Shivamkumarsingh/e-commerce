<style>
.col-sm-3{
    background-color: #d9d9d9;
}
table
{
	 border-collapse: collapse;
    width: 100%;
}
th, td {
    border-bottom: 1px solid #ddd;
}
.link{
 float: right;
}
a
{
	color:red;
}

</style>
<h1>Your Cart</h1>
<% total = 0 %>
<% quant = 0 %>
<table>
 <thead>
 <tr>
 <th>PRODUCTS</th>
 <th>BRAND</th>
 <th>QUANTITY</th>
 <th>TOTAL AMOUNT</th>
 <th colspan="3"></th>
 </tr>
 </thead>
 <tbody>
 <% @cart.each do |id, quantity| %>
<% product = Product.find_by_id(id) %>
 <tr>
 <td><%=link_to(image_tag(product.image.url, :style => "height:100px;width:100px;" ),   :class => "img-responsive") %></td>
 <td><%=product.brand.name %></td>
 <td> <%= quantity%></td>
 <td><%=number_to_currency(product.sale_price, :unit => '$') %></td>
 </tr>
 <% total += quantity * product.sale_price %>
<%quant += quantity%>

  <% end %>
 </tbody>
</table>
<% if @cart.empty? %>
<p>Your Cart is empty</p>
<% else %>
<div class ="link">
<%= link_to 'Empty Your Cart',cart_clear_path %>
</div>
<% end %>
<br><br>
<div class="col-sm-3" >
<p>ORDER SUMMARY</p>
<p><b>TOTAL ITEM   -   <%= quant %></b></p>
<p><b>SHIPING CHARGE  - <a>Free</a></b></p>
<p><b>TOTAL  -  <%= number_to_currency(total,:unit => '$') %></b></p>

</div>


