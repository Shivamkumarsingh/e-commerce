<h1>Your Cart</h1>
<% if @cart.empty? %>
<p>Your Cart is empty</p>
<% else %>

<%= link_to 'Empty Your Cart',cart_clear_path %>
<% end %>
<br><br><br>

<% total = 0 %>
<ul>
<% @cart.each do |id, quantity| %>
<% product = Product.find_by_id(id) %>
<li>
 <p><%=link_to(image_tag(product.image.url, :style => "height:100px;width:100px;" ),   :class => "img-responsive") %></p>
 
<p><%=product.brand.name %></p>
<p><%=number_to_currency(product.sale_price, :unit => '$') %></p>
<p>Quantity: <%= quantity%></p>
</li>
<% total += quantity * product.sale_price %>
<% end %>
<p><b><%= number_to_currency(total,:unit => '$') %></b></p>
</ul>
